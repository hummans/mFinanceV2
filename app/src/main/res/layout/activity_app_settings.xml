<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whitesmoker"
    tools:context=".Activities.AppSettings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout14"
        android:padding="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/profile_avator"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/agentImage"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/white"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/agentLog"
            android:layout_below="@+id/agentImage"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:textSize="12sp"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/agentLastlogin"
            android:layout_below="@+id/agentLog"
            android:layout_alignLeft="@+id/agentLog"
            android:layout_alignStart="@+id/agentLog"
            android:textSize="10sp"
            android:layout_alignRight="@+id/agentLog"
            android:layout_alignEnd="@+id/agentLog"
            android:gravity="center" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp">

        <ListView
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/settingsList"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/buttonsLayout" />
    </RelativeLayout>
</RelativeLayout>
