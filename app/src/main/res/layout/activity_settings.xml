<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nfortics.mfinanceV2.Activities.SettingsActivity">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container">


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout5"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Application Settings"
                android:id="@+id/settingsTitle"
                android:gravity="left"
                android:padding="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="0.5dp"
                android:background="#194e9a"
                android:layout_below="@+id/settingsTitle"
                ></LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/updateProfileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout5"
            android:layout_margin="5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Update Profile"
                android:id="@+id/updateProfile"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="update your current profile"
                android:id="@+id/updateprofiledetails"
                android:layout_below="@+id/updateProfile"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="0.5dp"
                android:background="#000000"
                android:layout_below="@+id/updateprofiledetails"
                ></LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@+id/updateProfileLayout"
            android:id="@+id/checkUpdatesLayout"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Check for Updates"
                android:id="@+id/checkUpdates"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Update App to Latest Version"
                android:id="@+id/updateAppdetail"
                android:layout_below="@+id/checkUpdates"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="0.5dp"
                android:background="#000000"
                android:layout_below="@+id/updateAppdetail"
                ></LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_below="@+id/checkUpdatesLayout"
            android:id="@+id/downloadCustomersLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Download Customers"
                android:id="@+id/downloadcustomers"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="300 customers download"
                android:id="@+id/downloadcustomersDetails"
                android:layout_below="@+id/downloadcustomers"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="0.5dp"
                android:background="#000000"
                android:layout_below="@+id/downloadcustomersDetails"
                ></LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/downloadCustomersLayout"
            android:id="@+id/printerSetupLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Printer Setup"
                android:id="@+id/printerSetup"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Connect Bluetooth Printer"
                android:id="@+id/printerSetupdesciption"
                android:layout_below="@+id/printerSetup"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="0.5dp"
                android:background="#000000"
                android:layout_below="@+id/printerSetupdesciption"
                ></LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


</ScrollView>


</RelativeLayout>
