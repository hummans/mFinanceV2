<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/primary"
    tools:context="com.nfortics.mfinanceV2.Fragments.SummaryBoardFragment">
    <LinearLayout
        android:orientation="vertical"

        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffb710">

    </LinearLayout>
   <RelativeLayout
       android:id="@+id/real"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_marginTop="5dp"
       android:padding="5dp"
       android:paddingBottom="0dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ACTIVITY SUMMARY"
        android:id="@+id/txtTitle"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="12dp"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="289 Transaction"
        android:id="@+id/txtSummarydetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtTitle"
        android:layout_marginTop="2dp"
        android:paddingLeft="12dp"
        android:textColor="#ffffff"
        android:gravity="center_vertical"
        android:layout_toStartOf="@+id/button2"
        android:layout_toLeftOf="@+id/button2" />

    <Button

        android:background="@drawable/roundshapebtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="14dp"
        android:text="2009"
        android:id="@+id/button"

        android:layout_alignTop="@+id/txtTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginLeft="5dp"
        android:textColor="#ffffff" />

    <Button

        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="100"
        android:textSize="12dp"
        android:id="@+id/button2"
        android:background="@drawable/roundshapebutonblue"
        android:layout_alignTop="@+id/button"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:textColor="#ffffff"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CASH AT HAND"
        android:id="@+id/txtCashLabel"
        android:paddingLeft="12dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtSummarydetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="GHs15,389.00 from 1000 customers"
        android:id="@+id/txtCashAmount"
        android:textColor="#ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:layout_below="@+id/txtCashLabel"
        android:layout_alignParentLeft="true" />



   </RelativeLayout>



</RelativeLayout>
