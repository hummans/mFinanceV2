<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.nfortics.mfinanceV2.Activities.BalancenquiryActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:weightSum="1"


                android:id="@+id/linearLayout3"
                android:padding="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Balance Enquiry"
                    android:id="@+id/customerDetailsTitle"
                    android:padding="8dp"
                    android:gravity="left"
                     />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="0.5dp"
                    android:background="#194e9a"
                    android:layout_below="@+id/fieldCollectTitle"
                    ></LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp"

                android:id="@+id/relativeLayout13">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Check Balance Using"
                    android:id="@+id/checkby"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/checkbySpinner"
                    android:layout_alignStart="@+id/checkbySpinner" />

                <Spinner
                    style="@style/spinner_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkbySpinner"
                    android:layout_below="@+id/checkby"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Enter Account Number"
                    android:id="@+id/balanceAccoount"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/checkbySpinner"
                    android:layout_alignLeft="@+id/checkbySpinner"
                    android:layout_alignStart="@+id/checkbySpinner"
                    android:layout_marginTop="20dp" />

                <EditText
                    android:background="@drawable/edittextstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/balanceAccountValue"
                    android:layout_below="@+id/balanceAccoount"
                    android:layout_marginTop="10dp"
                    android:layout_alignLeft="@+id/balanceAccoount"
                    android:layout_alignStart="@+id/balanceAccoount"
                    android:layout_alignRight="@+id/checkbySpinner"
                    android:layout_alignEnd="@+id/checkbySpinner"
                    android:padding="5dp" />
            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:layout_below="@+id/relativeLayout13"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Print Balance"
                    style="@style/btnSummary"
                    android:id="@+id/printButton"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    style="@style/btnSummary"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Send Over SMS"
                    android:id="@+id/smsbutton"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="4dp" />
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>




</RelativeLayout>
