<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include  android:id="@+id/app_bar"
                layout="@layout/app_bar">

            </include>




            <RelativeLayout
                android:id="@+id/compound"

                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <android.support.v7.widget.RecyclerView
                     android:background="@color/whitesmoker"
                    android:id="@+id/recyle"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_below="@+id/tabs">

                </android.support.v7.widget.RecyclerView>
                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:id="@+id/buttonsLayout"
                    android:weightSum="1"
                    android:layout_below="@+id/recyle"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/primary"
                    android:visibility="gone"
                    android:gravity="center">

                    <Button
                        style="@style/btnSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="View Activities"
                        android:id="@+id/buttViewActivities"
                        android:layout_alignTop="@+id/butPrintActivity"
                        android:layout_toRightOf="@+id/txtCashAmount"
                        android:layout_toEndOf="@+id/txtCashAmount"
                        android:layout_weight="0.10"
                         />

                    <Button
                        style="@style/btnSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Print Activities"
                        android:id="@+id/butPrintActivity"
                        android:layout_alignParentBottom="true"
                        android:layout_alignLeft="@+id/txtCashLabel"
                        android:layout_alignStart="@+id/txtCashLabel"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.07" />

                </LinearLayout>

                <ListView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/favItemsList"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/buttonsLayout" />

                <com.github.clans.fab.FloatingActionMenu
                    android:id="@+id/menu1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    fab:menu_fab_size="normal"
                    fab:menu_colorNormal="#1565C0"
                    fab:menu_backgroundColor="#ccffffff"
                    fab:menu_colorPressed="#2272CD"
                    fab:menu_colorRipple="#62B2FF"
                    android:layout_alignParentBottom="true"

                    android:layout_alignParentRight="true"
                    fab:menu_icon="@drawable/ic_menu"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    fab:menu_animationDelayPerItem="0"
                    fab:menu_labels_ellipsize="end"
                    fab:menu_labels_singleLine="true"
                    fab:menu_fab_label=""
                    android:layout_below="@+id/recyle">

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fab1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_printing"
                        fab:fab_size="mini"
                        fab:fab_colorNormal="#ff7f0b"
                        fab:fab_colorPressed="#ff7f0b"
                        fab:fab_colorRipple="#ffae12"
                        fab:fab_label="Print Activities" />

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fab2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        fab:fab_colorNormal="#ff7f0b"
                        fab:fab_colorPressed="#ff7f0b"
                        fab:fab_colorRipple="#ffae12"
                        android:src="@drawable/ic_commission"
                        fab:fab_size="mini"
                        fab:fab_label="View Commission" />

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fab3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_activities"
                        fab:fab_colorNormal="#ff7f0b"
                        fab:fab_colorPressed="#ff7f0b"
                        fab:fab_colorRipple="#ffae12"
                        fab:fab_size="mini"
                        fab:fab_label="View Activities" />

                </com.github.clans.fab.FloatingActionMenu>



            </RelativeLayout>


    </LinearLayout>


    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="com.nfortics.mfinanceV2.NavigationDrawer.NavigationDrawerFragment"
        app:layout="@layout/navigationdrawer"
        tools:layout="@layout/navigationdrawer" />




</android.support.v4.widget.DrawerLayout>