<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nfortics.mfinanceV2.Dialogs.ShowAccountDialog">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"

        android:background="@color/primary"
        android:id="@+id/linearLayout3"
        android:padding="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Customer Accounts"
            android:id="@+id/customerDetailsTitle"
            android:layout_weight="1.75"
            android:gravity="center"
            android:textColor="#ffffff" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout6">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/profile_avator"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="9dp"
            android:id="@+id/relativeLayout11">


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Yaw Boafo"
            android:id="@+id/customerName"
            android:textSize="18dp"
            android:layout_alignRight="@+id/relativeLayout11"
            android:layout_alignEnd="@+id/relativeLayout11"
            android:layout_above="@+id/relativeLayout11"
            android:layout_alignLeft="@+id/relativeLayout11"
            android:layout_alignStart="@+id/relativeLayout11" />

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/relativeLayout6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4"
        android:background="#ffb710"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/relativeLayout6"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/customerAccountListView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">



        </ListView>

    </RelativeLayout>

</RelativeLayout>
