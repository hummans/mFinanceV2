<resources>


    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="appBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/primary_text</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
    </style>


    <style name="btnGray" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ee0a0a0a</item>
        <item name="android:gravity">center</item>

        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:background">@drawable/graybutton</item>
        <item name="android:padding">8dip</item>
    </style>

    <style name="btnSummary" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>

        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:background">@drawable/summarybutton</item>
        <item name="android:padding">8dip</item>
    </style>



    <style name="TextLabel" parent="TextAppearance.AppCompat">
        //hint color And Label Color in False State
      //<item name="android:textColorHint">@color/accent</item>

        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="btnLogin" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>

        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:background">@drawable/loginbutton</item>
        <item name="android:padding">8dip</item>
    </style>

    <style name="btnLoginBiometric" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>

        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:background">@drawable/loginbuttonbiometric</item>
        <item name="android:padding">8dip</item>
    </style>



    <style name="blueButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:padding">8dip</item>
    </style>
    <style name="FabMargin">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="keypadButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#194e9a</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:background">@drawable/login_keypad_button</item>
        <item name="android:padding">8dip</item>
    </style>



        <style name="DialogAnimationOutUpInUp">
            <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
            <item name="android:windowExitAnimation">@anim/slide_out_up</item>
        </style>


</resources>
