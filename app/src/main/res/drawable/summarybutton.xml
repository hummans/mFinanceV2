<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="#ff9900" />
            <gradient  android:angle="-90"  android:startColor="#ff7f0b" android:endColor="#ffa21d"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="#000000" />
            <solid  android:color="#b71e1e1e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="#ff9900" />
            <gradient  android:angle="-90"  android:startColor="#ff9900" android:endColor="#ff9900" />
        </shape>
    </item>
</selector>